#!/usr/bin/env bash

if [ "@NANOX_ENABLED@" = "no" ];
then
cat <<EOF
test_ignore=yes
test_ignore_reason="Nanos++ support not enabled"
EOF
exit
fi

if [ "@NANOX_SSE@" = "no" ];
then

cat <<EOF
test_ignore=yes
test_ignore_reason="SSE4.2 not available"
EOF
exit
fi

if [ "$1" = "svml" -a -z "@ICC@" ];
then

cat <<EOF
test_ignore=yes
test_ignore_reason="ICC not enabled"
EOF

exit

fi

if [ "$1" = "svml" -a "@SVML_ENABLED@" != yes ];
then

cat <<EOF
test_ignore=yes
test_ignore_reason="SVML not enabled"
EOF

exit

fi

source @abs_builddir@/mercurium-libraries


COMMON_NANOX_CFLAGS=-DNANOX

NANOX_GATE=""
if [ "@NANOS6_ENABLED@" = "yes" ];
then
    NANOX_GATE="--nanox"
fi


if [ "$1" != "svml" ];
then

cat <<EOF
MCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mcc --config-dir=@abs_top_builddir@/config --verbose"
MCXX="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=mcxx --config-dir=@abs_top_builddir@/config --verbose"

compile_versions="\${compile_versions} nanox_mercurium"

test_CC_nanox_mercurium="\${MCC}"
test_CXX_nanox_mercurium="\${MCXX}"

test_CFLAGS_nanox_mercurium="--simd --debug-flags=vectorization_verbose --openmp -std=gnu99 ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_CXXFLAGS_nanox_mercurium="--simd --debug-flags=vectorization_verbose --openmp ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_LDFLAGS_nanox_mercurium="@abs_top_builddir@/lib/perish.o"

EOF

fi

if [ ! -z "@ICC@" ];
then

DISABLE_INTEL_INTRINSICS=""
ICC_VERSION=$(icc --version | head -n 1 | sed -e "s/^icc (ICC) \([0-9]\+\)\(\.[0-9]\+\)*.*$/\1/i")
if [ -n "$ICC_VERSION" -a "$ICC_VERSION" -le 15 ];
then
    DISABLE_INTEL_INTRINSICS="--disable-intel-intrinsics"
fi


if [ "$1" = "svml" ]; then

cat <<EOF

IMCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=imcc --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_imcc_svml"
test_CC_nanox_imcc_svml="\${IMCC}"

test_CFLAGS_nanox_imcc_svml="--simd --debug-flags=vectorization_verbose --openmp --svml -std=gnu99  --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE} ${DISABLE_INTEL_INTRINSICS}"
test_CXXFLAGS_nanox_imcc_svml="--simd --debug-flags=vectorization_verbose --openmp --svml -std=gnu99  --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE} ${DISABLE_INTEL_INTRINSICS}"
test_LDFLAGS_nanox_imcc_svml="@abs_top_builddir@/lib/perish.o"

compile_versions="\${compile_versions} nanox_imcc_svml_fast_math"
test_CC_nanox_imcc_svml_fast_math="\${IMCC}"

test_CFLAGS_nanox_imcc_svml_fast_math="--simd --debug-flags=vectorization_verbose --openmp --svml --fast-math -std=gnu99  --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_CXXFLAGS_nanox_imcc_svml_fast_math="--simd --debug-flags=vectorization_verbose --openmp --svml --fast-math -std=gnu99  --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE}"
test_LDFLAGS_nanox_imcc_svml_fast_math="@abs_top_builddir@/lib/perish.o"

EOF

else

cat <<EOF

IMCC="@abs_top_builddir@/src/driver/plaincxx --output-dir=@abs_top_builddir@/tests --profile=imcc --config-dir=@abs_top_builddir@/config --verbose"
compile_versions="\${compile_versions} nanox_imcc"
test_CC_nanox_imcc="\${IMCC}"

test_CFLAGS_nanox_imcc="--simd --debug-flags=vectorization_verbose --openmp -std=gnu99 --Wn,-no-fast-transcendentals,-fp-model,precise --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE} ${DISABLE_INTEL_INTRINSICS}"
test_CXXFLAGS_nanox_imcc="--simd --debug-flags=vectorization_verbose --openmp -std=gnu99 --Wn,-no-fast-transcendentals,-fp-model,precise --enable-ms-builtins ${COMMON_NANOX_CFLAGS} ${NANOX_GATE} ${DISABLE_INTEL_INTRINSICS}"
test_LDFLAGS_nanox_imcc="@abs_top_builddir@/lib/perish.o"

EOF

fi

fi

cat <<EOF
exec_versions="1thread"

test_ENV_1thread="OMP_NUM_THREADS='1'"
EOF
